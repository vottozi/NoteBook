<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.InputFragment"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageInput"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_dashboard_black_24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_load"
        android:layout_width="90dp"
        android:layout_height="60dp"
        app:cornerRadius="20dp"
        android:text="Load"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/name_surname_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DBEBF3"
        android:textSize="26dp"
        android:hint="Write name"
        android:textColorHint="#63FFFFFF"/>

    <EditText
        android:id="@+id/number_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DBEBF3"
        android:textSize="26sp"
        android:layout_marginTop="12dp"
        android:hint="Write number"
        android:textColorHint="#63FFFFFF"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add"
        android:layout_width="90dp"
        android:layout_height="60dp"
        app:cornerRadius="20dp"
        android:text="Add"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>